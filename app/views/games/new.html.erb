<div class="letters-box text-center">
  <% (1..3).to_a.each do |i| %>
    <div class="row">
      <% (1..4).to_a.each do |j|%>
        <div class="col-sm">
          <button class = "letter rounded <%=@colors[(i-1)*4 + (j-1)]%>"><%=@letters.pop%></button>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="container text-center justify-content-center">
    <form action="/score" method = "POST" class = "m-3 justify-content-center" data-turbo="false">
      <input type="text" class="form-control mb-3 text-center" id="word" placeholder="Let's go!" value = "" name = "word">
      <button type="submit" id = "submit" class="btn btn-primary" disabled>Lock it in!</button>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
